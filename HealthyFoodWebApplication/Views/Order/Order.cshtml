@using HealthyFoodWebApplication.ViewModels
@model List<CustomerOrdersVM>

@*@model ShoppingBagItem
*@<!-- Page Header Start -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Orders</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Home" asp-action="GetHomeView">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Orders</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Feature Start -->
<div class="container-fluid bg-light bg-icon py-6 mb-0">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 1000px;">
            <div>
                <h1 class="display-5">Customers Orders</h1>
            </div>
            <br />
            <div class="row text-center">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Serial Number</th>
                            <th scope="col">Customer Name</th>
                            @*<th scope="col">Customer Phone</th>*@
                            <th scope="col">Product Name</th>
                            <th scope="col">Product Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total Price</th>
                            <th scope="col">Done</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                            @for(var i =0;i<Model.Count();i++)
                            {
                            <tr>
                               <td>@(i+1)</td>
                               <td>@Model[i]?.FullName</td>
                                @*<td>@Model[i]?.PhoneNumber</td>*@
                                <td>@Model[i]?.ProductName</td>
                                <td>@Model[i]?.ProductPrice</td>
                                <td>@Model[i]?.ProductQuantity</td>
                                <td>@Model[i]?.TotalPrice</td>
                                <td><input class="form-check-input fs-5" type="checkbox"></td>
                                </tr>
                            }
                        @*<tr class="bg-warning">
                            <td class="fs-5" colspan="8">Total Cost $60.00</td>
                        </tr>*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Feature End -->
