@model HealthyFoodWebApplication.ViewModels.loginVm;

<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Login</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Home" asp-action="GetHomeView">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Login</li>
            </ol>
        </nav>
    </div>
</div>
<div class="container mb-3">

    <form asp-controller="Login" asp-action="loginUser" method="post">

        <div class="mb-3">
            <label for="inputUsername" class="form-label">Username</label>
            <input asp-for="Username" type="text" class="form-control" id="InputUsername" aria-describedby="EnterUsername">
            <span asp-validation-for="Username" class="text-danger"></span>

        </div>
        <div class="mb-4">
            <label for="inputPassword" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="inputPassword">
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <div class="d-flex justify-content-evenly">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

    </form>
</div>