<!-- Page Header Start -->
@model Product

<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Product Addition</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-controller="Home" asp-action="GetHomeView">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Add Product</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Feature Start -->
<div class="container-fluid bg-light bg-icon py-6 mb-0">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 1000px;">
            <div>
                <h1 class="display-5">Add Product</h1>
            </div>
            <br />
            <div class="text-center row">

                @*TODO: Add Form Controls Here!*@
                <form method="post">

                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" data-val="true" data-val-required="The Name field is required." />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input class="form-control" asp-for="Price" required />
                        <span asp-validation-for="Price" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="PriceBeforeSale"></label>
                        <input class="form-control" asp-for="PriceBeforeSale" />
                        <span asp-validation-for="PriceBeforeSale" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Category">Category</label>
                        <select class="form-control" asp-for="Category" asp-items="Html.GetEnumSelectList<ProductType>()" >
                            <option value="0">--Select Category--</option>
                            <span asp-validation-for="Category" class="text-danger"></span>

                        </select>
                    </div>
                    <br />
                    <input type="submit" value="Add" class="btn btn-primary" />

                </form>

            </div>
        </div>
    </div>
</div>
<!-- Feature End -->
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }