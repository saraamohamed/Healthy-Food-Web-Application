<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item border-start border-top border-info w-50 text-center" role="presentation">
        <a class="nav-link active" data-bs-toggle="tab" href="#login" aria-selected="true" role="tab">Login</a>
    </li>
    <li class="nav-item border-top border-end border-info w-50 text-center" role="presentation">
