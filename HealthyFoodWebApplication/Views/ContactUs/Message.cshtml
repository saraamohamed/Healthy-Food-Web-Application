@model List<CustomerMessage>
<form asp-action="GetAll" asp-controller="CustomerMessage" method="post">

    <!-- Page Header Start -->
    <div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
            <h1 class="display-3 mb-3 animated slideInDown">Customers Messages</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a class="text-body" asp-controller="Home" asp-action="GetHomeView">Home</a></li>
                    <li class="breadcrumb-item text-dark active" aria-current="page">Customers Messages</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Feature Start -->
    <div class="container-fluid bg-light bg-icon py-6 mb-0">
        <div class="container">
            <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 1000px;">
                <div>
                    <h1 class="display-5">See Customers Messages</h1>
                </div>
                <br />
                <div class="text-center row">
                    @*TODO: Add Customers Messages Table Here!*@
                    <table class="table    table-hover table-bordered">
                        <tr>

                            <th>Name</th>
                            <th>subject</th>
                            <th>Email</th>
                            <th>message</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Subject</td>
                                <td>@item.Email</td>
                                <td>@item.Message</td>



                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- Feature End -->
